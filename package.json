{
  "name": "lms-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "docker-compose up",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:services": "docker-compose up auth-service user-service department-service",
    "build": "docker-compose build",
    "down": "docker-compose down",
    "logs": "docker-compose logs -f",
    "setup": "npm run install-frontend && npm run install-services",
    "install-frontend": "cd frontend && npm install",
    "install-services": "cd services/auth && pip install -r requirements.txt"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "docker": "latest"
  }
}